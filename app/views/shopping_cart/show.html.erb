<h2>Your Shopping Cart</h2>

<table id="shopping_cart">
  <thead>
    <tr>
      <th id="product">Product</th>
      <th id="quantity">Quantity</th>
      <th id="price">Price</th>
      <th id-"action">Action</th>
    </tr>
  </thead>
  <tbody>
    <%= render @shopping_cart.line_items %>
    <tr>
      <td id="cart-price" colspan="3">
        Total: <%= number_to_currency @shopping_cart.total_price %>
      </td>
      <td id="empty-cart">
        <%= button_to 'Empty cart', empty_shopping_cart_path, method: :delete,
          confirm: 'Are you sure you want to empty your cart?' %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to 'Continue shopping', products_path %> or
<%= link_to 'Check out' %>
